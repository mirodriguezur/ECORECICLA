<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity">

    <ImageView
        android:id="@+id/viewLogoRegister"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ecoreciclalogo" />

    <ImageButton
        android:id="@+id/btnInfoRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bxs_info_circle" />

    <ImageButton
        android:id="@+id/btnBackRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bx_arrow_back" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="520dp"
        android:layout_marginTop="140dp"
        android:orientation="vertical"
        android:background="#D9D9D9"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textWelcomeRegister"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Crea tu cuenta en EcoRecicla"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNameRegister"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Nombres"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextLastNameRegister"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Apellidos"
            android:layout_marginTop="5dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextEmailRegister"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Email"
            android:layout_marginTop="5dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextPhoneRegister"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Número celular"
            android:layout_marginTop="5dp"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editTextCityRegister"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Ciudad"
            android:layout_marginTop="5dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextPasswordRegister"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Contraseña"
            android:layout_marginTop="5dp"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextRepeatPasswordRegister"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Repite tu contraseña"
            android:layout_marginTop="5dp"
            android:inputType="textPassword" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radioButtonTermsConditionsRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textSize="13sp"
                android:text="@string/radio_button_terms" />

        </RadioGroup>

        <Button
            android:id="@+id/btnRegisterRegister"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:backgroundTint="#285827"
            android:text="Crear Usuario" />

    </LinearLayout>

    <TextView
        android:id="@+id/TextFollowUsRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:text="Siguenos en nuestras redes sociales:"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnInstagramRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bxl_instagram" />

    <ImageButton
        android:id="@+id/btnfacebookRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bxl_facebook_circle" />

    <ImageButton
        android:id="@+id/btntwitterRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bxl_twitter" />
</androidx.constraintlayout.widget.ConstraintLayout>